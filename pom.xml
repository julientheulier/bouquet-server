    <build>
        <finalName>bouquet-server</finalName>
        <plugins>


            <plugin>
                <groupId>org.sonatype.plugins</groupId>
                <artifactId>nexus-staging-maven-plugin</artifactId>
                <version>1.6.3</version>
                <extensions>true</extensions>
                <configuration>
                    <serverId>ossrh</serverId>
                    <nexusUrl>https://oss.sonatype.org/</nexusUrl>
                    <autoReleaseAfterClose>true</autoReleaseAfterClose>
                </configuration>
            </plugin>

            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>fully.qualified.MainClass</mainClass>
                        </manifest>
                    </archive>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                </configuration>
            </plugin>

            <plugin>
                <groupId>external.atlassian.jgitflow</groupId>
                <artifactId>jgitflow-maven-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <excludes>
                        <exclude>**/com/squid/test/*.java</exclude>
                        <exclude>**/com/squid/test/cache/perf/*.java</exclude>
                        <exclude>**/com/squid/test/cache/unit/*.java</exclude>
                        <exclude>**/com/squid/test/elasticsearch/*.java</exclude>
                    </excludes>
                    <systemProperties>
                        <property>
                            <name>kraken.dir.plugin</name>
                            <value>${kraken.dir.plugin}</value>
                        </property>
                    </systemProperties>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.6</version>

                <executions>
                    <execution>
                        <id>make-a-jar</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <finalName>${project.artifactId}-${project.version}</finalName>
                    <archive>
                        <manifestEntries>
                            <Built-Date>${build.date}</Built-Date>
                            <Revision>${build.number}</Revision>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <manifest>
                        <addDefaultImplementationEntries>true
                        </addDefaultImplementationEntries>
                    </manifest>
                    <archive>
                        <manifestEntries>
                            <Built-Date>${build.date}</Built-Date>
                            <Revision>${build.number}</Revision>
                            <Version>${project.version}</Version>
                        </manifestEntries>
                    </archive>
                    <!--  					<failOnMissingWebXml>false</failOnMissingWebXml> -->
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.10</version>
                <executions>
                    <execution>
                        <id>analyze</id>
                        <goals>
                            <goal>analyze-only</goal>
                        </goals>
                        <configuration>
                            <failOnWarning>false</failOnWarning>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <version>2.5.2</version>
                <executions>
                    <execution>
                        <phase>install</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <packaging>jar</packaging>
                            <artifactId>${project.artifactId}</artifactId>
                            <groupId>${project.groupId}</groupId>
                            <version>${project.version}</version>
                            <file>
                                ${project.build.directory}/${project.artifactId}-${project.version}.jar
                            </file>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.eclipse.jetty</groupId>
                <artifactId>jetty-maven-plugin</artifactId>
                <version>9.3.8.v20160314</version>
                <configuration>
                    <waitForChild>true</waitForChild>
                    <systemProperties>
                        <systemProperty>
                            <name>bouquet.config.file</name>
                            <value>${project.basedir}/config/bouquet.json</value>
                        </systemProperty>
                        <systemProperty>
                            <name>kraken.plugin.dir</name>
                            <value>${project.basedir}/../drivers</value>
                        </systemProperty>
                        <systemProperty>
                            <name>kraken.facet</name>
                            <value>front,keyserver,queries,queryworker</value>
                        </systemProperty>
                        <systemProperty>
                            <name>es.network.bind_host</name>
                            <value>127.0.0.1</value>
                        </systemProperty>
                        <systemProperty>
                            <name>DEBUG.MONGO</name>
                            <value>true</value>
                        </systemProperty>
                        <systemProperty>
                            <name>DB.TRACE</name>
                            <value>true</value>
                        </systemProperty>
                        <systemProperty>
                            <name>logback.configurationFile</name>
                            <value>${project.basedir}/config/logback.xml</value>
                        </systemProperty>
                        <systemProperty>
                            <name>user.timezone</name>
                            <value>UTC</value>
                        </systemProperty>
                    </systemProperties>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.tomcat.maven</groupId>
                <artifactId>tomcat7-maven-plugin</artifactId>
                <configuration>
                    <!-- http port -->
                    <port>9000</port>
                    <!-- application path always starts with / -->
                    <path>/dev/v4.2</path>
                    <systemProperties>
                        <bouquet.config.file>${project.basedir}/config/bouquet.json</bouquet.config.file>
                        <kraken.plugin.dir>${project.basedir}/../drivers</kraken.plugin.dir>
                        <kraken.facet>front,keyserver,queries,queryworker</kraken.facet>
                        <es.network.bind_host>127.0.0.1</es.network.bind_host>
                        <DEBUG.MONGO>true</DEBUG.MONGO>
                        <DB.TRACE>true</DB.TRACE>
                        <logback.configurationFile>logback.xml</logback.configurationFile>
                        <user.timezone>UTC</user.timezone>
                    </systemProperties>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>2.2.1</version>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <goals>
                            <goal>jar-no-fork</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.9.1</version>
                <executions>
                    <execution>
                        <id>attach-javadocs</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-gpg-plugin</artifactId>
                <version>1.6</version><!--$NO-MVN-MAN-VER$-->
                <executions>
                    <execution>
                        <id>sign-artifacts</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>sign</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <reporting>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
