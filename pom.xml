                                    <version>0.10.0</version>
                                </docletArtifact>
                            </docletArtifacts>
                            <additionalparam>-disablehttpexample</additionalparam>
                            <additionalparam>-disablejavascriptexample</additionalparam>
                            <additionalparam>-stylesheetfile ${basedir}/build/doclet.css
                            </additionalparam>
                        </configuration>
                        <reports>
                            <report>javadoc</report>
                        </reports>
                    </reportSet>
                </reportSets>
            </plugin>
        </plugins>
    </reporting>
